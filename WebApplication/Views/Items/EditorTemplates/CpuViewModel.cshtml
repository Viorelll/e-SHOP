@using WebApplication.Models
@model WebApplication.Models.CpuViewModel

@{
    ViewBag.Title = "Cpu";
}

@Html.Hidden("ModelType", typeof(CpuViewModel))

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.CpuModel, new { htmlAttributes = new { @class = "form-control", placeholder = "Model" } })
    @Html.ValidationMessageFor(model => model.CpuModel)
</div>

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.Frequency, new { htmlAttributes = new { @class = "form-control", placeholder = "Frequency" } })
    @Html.ValidationMessageFor(model => model.Frequency)
</div>

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.FamilyName, new { htmlAttributes = new { @class = "form-control", placeholder = "Family name" } })
    @Html.ValidationMessageFor(model => model.FamilyName)
</div>