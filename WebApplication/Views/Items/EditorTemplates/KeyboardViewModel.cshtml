@using WebApplication.Models
@model WebApplication.Models.KeyboardViewModel

@{
    ViewBag.Title = "Keyboard";
}

@Html.Hidden("ModelType", typeof(KeyboardViewModel))

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.KeyboardModel, new { htmlAttributes = new { @class = "form-control", placeholder = "Model" } })
    @Html.ValidationMessageFor(model => model.KeyboardModel)
</div>

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.KeyboardInterface, new { htmlAttributes = new { @class = "form-control", placeholder = "Keyboard interface" } })
    @Html.ValidationMessageFor(model => model.KeyboardInterface)
</div>

<div class="form-group col-md-12">
    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", placeholder = "Type" } })
    @Html.ValidationMessageFor(model => model.Type)
</div>
